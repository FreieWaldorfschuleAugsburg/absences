{
    "name": "waldorfaugsburg/absences",
    "description": "Absences portal for school staff",
    "license": "MIT",
    "type": "project",
    "homepage": "https://github.com/FreieWaldorfschuleAugsburg/absences",
    "require": {
        "php": "^8.1",
        "codeigniter4/framework": "^4.0",
        "guzzlehttp/guzzle": "^7.10",
        "jumbojett/openid-connect-php": "^1.0",
        "mpdf/mpdf": "^8.2"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^10.5.16"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit"
    }
}
